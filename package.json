{
  "name": "express-ts-api",
  "version": "1.0.1",
  "description": "API boiler Plate for Express-TS application ",
  "main": "build/server.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpileOnly ./src/server.ts",
    "bundle": "tsc -p  tsconfig.json",
    "test": "jest",
    "clean": "rm -rf build && rm -rf .scannerwork && rm -rf coverage",
    "prod": "node ./build/server.js",
    "debug": "node --inspect  -r ts-node/register  src/server.ts",
    "build": "npm run bundle && cp src/.env build/.env && cp -r src/swagger.json  src/infra  build/",
    "open": "concurrently \"http-server  ./coverage/lcov-report -a localhost -p 1234\" \" sleepms 1000 && xdg-open http://localhost:1234/\"",
    "test-coverage": "npm test -- --coverage",
    "test-generate": " npm run test-coverage && npm run open"
  },
  "author": "Sharukh",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "@nemospeculo/express-sanitized": "^1.0.1",
    "bcrypt": "^4.0.0",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "express": "^4.17.1",
    "ioredis": "^4.16.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "uuid": "^7.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/ioredis": "^4.14.3",
    "@types/jest": "^25.1.3",
    "@types/joi": "^14.3.4",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.12.22",
    "@types/supertest": "^2.0.8",
    "@types/swagger-ui-express": "^4.1.1",
    "@types/uuid": "^3.4.6",
    "@types/validator": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "concurrently": "^5.1.0",
    "http-server": "^0.12.1",
    "jest": "^25.1.0",
    "sleep-ms": "^2.0.1",
    "supertest": "^4.0.2",
    "swagger-ui-express": "^4.1.2",
    "ts-jest": "^25.2.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.3"
  }
}
